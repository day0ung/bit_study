package work1;

import java.util.Scanner;

public class mainClass {

	public static void main(String[] args) {
		//편의점
		/*
		 	입력
		  	지불금액: 3230원
		  	money: 10000원
		  	
		  	거스름돈: 
		  	5000원 -> ?장
		  	1000원 -> ?장
		  	500원 -> ?개
		  	100원 -> ?개
		  	50원 -> ?개
		  	10원 -> ?개
		  	
		  	결과: ????원
		 */
		Scanner scan  = new Scanner(System.in);
		int money = 10000;
		System.out.println("지불금액을 입력하세요");
		int a = scan.nextInt();
		System.out.println("=====거스릅돈=====");
		System.out.println("5000원: "+(money - a)/5000 +"장");
		System.out.println("1000원: "+(((money - a)/5000)-(money - a)/1000) +"장");
		System.out.println("500원: "+(money - a)/500 +"개");
		System.out.println("100원: "+(money - a)/100 +"개");
		System.out.println("50원: "+(money - a)/50 +"개");
		System.out.println("10원: "+(money - a)/10 +"개");
		System.out.println("결과: "+ (money-a)+"원");
		
		

	}

}
