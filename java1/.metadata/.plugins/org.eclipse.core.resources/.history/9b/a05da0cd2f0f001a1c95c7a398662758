package function1;

public class mainClass2 {
	public static void main(String[] args) {
		/*  //자료형 매개변수 리턴값을 배열로받을 수 있다.
		 *  array      array
		 *  자료형 함수명(매개변수)
		 *  	처리
		 *  	리턴값  array
		 * 
		 */
		
		int num;
		int arrNum[] = new int [1];
		
		num = 11;		
		arrNum[0] = 11;
		func(num, arrNum);
		System.out.println("num =" +num);
		System.out.println("arrNum[0]" + arrNum[0]);
		
//		n =11   
//		arr[0] =11 
//		num =11      >> 바뀌지않음 (일반변수) num이 넘어가는 것이아니라  11이 넘어감
//		arrNum[0]22  >>바뀜 (배열, 참조변수) , 넘어갈때 주소값이 넘어가는것임 본인이 넘어감,
	}
	
	//				value,  address     //두가지가 다름, 앞의 것과 뒤이 차이점 앞은 값이 넘어옴, 뒤는 자기자신(=pointer)이 넘어옴
	static int func(int n, int arr[]) {
		System.out.println("n =" +n);
		System.out.println("arr[0] =" +arr[0]);
		
		n = 22;
		arr[0] =22;
		return n;
	}

}
