package work2;

import java.util.Scanner;

public class mainClass {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		//[회원수][정보]
		String datas[][] = new String[2][4];
		
		/*
		 *  [0] : 번호 
		 *  [1] : 이름
		 *  [2] : 나이
		 *  [3] : 주소
		 */
		
		int choice;
		
		while(true) {
			//DAO Data Access Object  
			//>> insert delete select update 이것을 다루는 클래스
			System.out.println("1.데이터의 추가(insert) ");
			System.out.println("2.데이터의 삭제 (delete)");
			System.out.println("3.데이터의 검색 (select)");
			System.out.println("4.데이터의 수정 (update)");
			System.out.println("5.데이터의 모두출력 ");
			
			System.out.print("메뉴번호를 입력해주십시오>>");
			choice = sc.nextInt();
			if(choice == 1) { //데이터추가
				//입력받는 부분
				for (int i = 0; i < datas.length; i++) {
					
				
				System.out.print("번호: ");
				String number = sc.next();
				System.out.print("이름: ");
				String name = sc.next();
				System.out.print("나이: ");
				String age = sc.next();
				System.out.print("주소: ");
				String address = sc.next();
				
				datas[i][0] = number;
				datas[i][1] = name;
				datas[i][2] = age;
				datas[i][3] = address;
				}
				for (int i = 0; i < datas.length; i++) {
					for (int j = 0; j < datas.length; j++) {
						System.out.println(datas[i][j]);
					}
				}
			}
			else if(choice == 2) { //데이터 삭제, " " 배열은 삭제안되니까 빈칸
				//입력받는 부분
			}
			else if(choice == 3) { //데이터 검색 , " " 배열은 삭제안되니까 빈칸
				//입력받는 부분
			}
			else if(choice == 4) { //데이터 수정, " " 배열은 삭제안되니까 빈칸
				//입력받는 부분
			}
			else if(choice == 5) { //데이터출력
			}
			
		}
	}

}
