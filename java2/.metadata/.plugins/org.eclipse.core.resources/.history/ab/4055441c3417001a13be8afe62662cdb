package game;



import java.awt.Color;
import java.awt.GridLayout;
import java.awt.Label;
import java.awt.Panel;

import javax.swing.JFrame;

public class GbbGame extends JFrame {
	int win = 0;
	int lose = 0;
	int draw = 0;
	public GbbGame() {
		super("가위바위보 게임 과제");
		
		setLayout(new GridLayout(4,1));
		//위에칸
		Label label = new Label("[----WIN "+win+"----]" +
		"[----LOSE" + lose +"----]"+ "[----DRAW" + draw+"----]");
		label.setBounds(100, 100, 300, 30);
		label.setBackground(Color.lightGray);
		add(label);
		
		//2번째칸
		
		Panel player = new Panel();
		
		player.setLayout(new GridLayout(1, 3));
		Label l1 = new Label("Player");
		l1.setBackground(Color.magenta);
		add(l1);
		
		
		Label l2 = new Label("vs");
		add(l2);
		
		
		Label l3 = new Label("Computer");
		l1.setBackground(Color.CYAN);
		add(l3);
		
		
		
		
		
		setSize(800, 600);
		setLocation(100, 0);
		setVisible(true);
		
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		
	}
	
}
