package game;



import java.awt.Button;
import java.awt.Color;
import java.awt.GridLayout;
import java.awt.Label;
import java.awt.Panel;

import javax.swing.JFrame;

public class GbbGame extends JFrame {
	int win;
	int lose;
	int draw;
	int result;
	Label  label;
	
	public GbbGame() {
		super("가위바위보 게임 과제");
		
		win  = 0;
		lose = 0;
		draw = 0;
		result =0;
		
		setLayout(new GridLayout(4,1));
		//위에칸
		label = new Label("[----WIN "+win+"----]" +
		"[----LOSE" + lose +"----]"+ "[----DRAW" + draw+"----]");
		label.setBounds(100, 100, 300, 30);
		label.setBackground(Color.lightGray);
		add(label);
		
		//2번째칸
		
		Panel play = new Panel();
		
		play.setLayout(new GridLayout(1, 3));
		Label l1 = new Label("Player");
		l1.setBackground(Color.magenta);
		play.add(l1);
			
		Label l2 = new Label("vs");
		l2.setBackground(Color.lightGray);
		play.add(l2);
		
		Label l3 = new Label("Computer");
		l1.setBackground(Color.CYAN);
		play.add(l3);
		
		//3번째칸
		Panel result = new Panel();
		result.setLayout(new GridLayout(1,3));
		Label r1 = new Label("Player result");
		l1.setBackground(Color.magenta);
		result.add(r1);
			
		Label r2 = new Label("result");
		l2.setBackground(Color.lightGray);
		result.add(l2);
		
		Label r3 = new Label("Computer result");
		l1.setBackground(Color.CYAN);
		result.add(l3);
		
		//4번째칸
		Panel gbb = new Panel();
		gbb.setLayout(new GridLayout(1, 3));
		Button rock = new Button("Rock");
		gbb.add(rock);
		Button scissors = new Button("Scissors");
		gbb.add(scissors);
		Button paper = new Button("Paper");
		gbb.add(paper);
		
		setSize(800, 600);
		setLocation(100, 0);
		setVisible(true);
		
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		
	}
	
}
